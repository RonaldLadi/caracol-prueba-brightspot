{{#each this}}
<div class="audio-player">
  <button class="audio-player__btn" aria-label="Reproducir audio">
    ▶
  </button>

  <div class="audio-player__info">
    <span class="audio-player__title">Escuchar audio</span>
    <span class="audio-player__meta">
      {{audioTitle}} · {{audioDuration}}
    </span>
  </div>

  <audio src="{{audioUrl}}"></audio>
</div>
{{/each}}
